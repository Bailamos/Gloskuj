<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center"
    android:background="@drawable/landscape_background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        />

    <LinearLayout
        android:id="@+id/LinearLayout_buttonRow1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="0.3">

        <Button
            android:id="@+id/goToGames"
            android:background="#C04d98d1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" android:text="Gry">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_buttonRow2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="0.3">
        <Button
            android:id="@+id/exitApp"
            android:background="#C04d98d1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="WyjÅ›cie">
        </Button>
    </LinearLayout>
</LinearLayout>